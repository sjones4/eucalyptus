<binding name="error_binding" force-classes="true" add-constructors="true" package="edu.ucsb.eucalyptus.msgs">

  <mapping name="ExceptionResponse" class="edu.ucsb.eucalyptus.msgs.ExceptionResponseType" >
    <value name="source" field="source" usage="optional" style="element" />
    <value name="message" field="message" usage="optional" style="element" />
    <value name="requestType" field="requestType" usage="optional" style="element" />
    <value name="error" field="error" usage="optional" style="element" />
  </mapping>

  <mapping name="ErrorMessage" class="edu.ucsb.eucalyptus.msgs.EucalyptusErrorMessageType" >
  <value name="source" field="source" usage="optional" style="element" />
  <value name="message" field="message" usage="optional" style="element" />
  <value name="requestType" field="requestType" usage="optional" style="element" />
  </mapping>

</binding>